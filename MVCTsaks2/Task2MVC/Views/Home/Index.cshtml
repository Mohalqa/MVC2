@model IEnumerable<DemoApp.Models.Categories>

<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>
                    @if (category.Image != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(category.Image)" alt="Category Image" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
